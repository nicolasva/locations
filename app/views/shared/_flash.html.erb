<%# Notice %>
<div id="flash">
	<% if flash[:notice].present? %>
	  <div class="alert alert-success"><%= flash[:notice] %></div>
	<% end %>
	<%# Alert %>
	<% if flash[:alert].present? %>
	  <div class="alert alert-danger"><%= raw(flash[:alert]) %></div>
	<% end %>
	<% flash[:notice], flash[:alert] = nil, nil %>
</div>